<div class="my-content-raised main">
  <div class="account-orders">
    <h4>我的订单</h4>
    <div class="search">
      <%= form_for admin_orders_path, method: :get do %>
        <span>开始:</span>
        <%= date_field_tag :start_date, params[:start_date].to_s[0,10] %>
        <span>结束:</span>
        <%= date_field_tag :end_date, params[:end_date].to_s[0,10] %>
        <%= button_tag fa_icon('search', text: "查询"), type: :submit, name: "", class: "btn btn-raised btn-white btn-sm" %>
      <% end %>
    </div>
    <%= render partial: "order", collection: @orders, as: :order %>
    <div class="pagination text-center">
      <%= will_paginate @orders, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
