<div class="col-md-10 col-md-offset-1">
  <div class="panel panel-default carts">
    <div class="panel-heading">
      <h4>购物车</h4>
    </div>
    <%= form_for current_cart, url: checkout_cart_path(current_cart), method: :post do |f|%>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>
              <%= f.check_box :select_all, class: "cart-select-all", id: "cart-select-all-top", checked: current_cart.cart_items_count > 0 %> 全选
            </th>
            <th>图片</th>
            <th>名称</th>
            <th>描述</th>
            <th>单价</th>
            <th>数量</th>
            <th>小计</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody class="cart-content">
          <% @form = f %>
          <%= render "cart_items" %>
        </tbody>
      </table>
    </div>
    <div class="panel-footer">
      <%= f.check_box :select_all, class: "cart-select-all", id: "cart-select-all-bottom", checked: current_cart.cart_items_count > 0 %> 全选
      <%= f.button "删除选中的商品", type: "submit", name: "delete_selected_items", value: true, class: "btn-delete-selected btn btn-default" %>
      <div class="items-count">
        已选择 <b id="items-count"><%= current_cart.cart_items_count %></b> 件商品
      </div>
      <div class="total-price">
        <h4>
          <small>总价：</small>
          ¥
          <span id="total-price">
            <%= render_price(current_cart.total_price) %>
          </span>
        </h4>
      </div>
      <%= f.button type: "submit", name: "checkout", value: true, class: "btn-checkout btn btn-danger" do %>
      <%= fa_icon("credit-card", text: "去结算") %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
