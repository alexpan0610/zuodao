<div class="panel panel-default admin-categories">
  <div class="panel-heading">
    <h4>商品分类
      <%= link_to "<i class='fa fa-plus' aria-hidden='true'></i> 新增".html_safe, new_admin_category_path, class: "btn btn-default pull-right" %>
    </h4>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th width="80%">名称</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each_with_index do |category, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= category.name %></td>
            <td>
              <%= link_to '编辑', edit_admin_category_path(category), class: "btn btn-default btn-sm" %>
              <%= link_to '删除', admin_category_path(category),class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
